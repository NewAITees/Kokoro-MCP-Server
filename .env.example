# VoiceCraft-MCP-Server 環境設定ファイル
# 実際に使用する際は、このファイルを .env としてコピーし、適切な値を設定してください

# サーバー設定
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Kokoro音声合成エンジン設定
KOKORO_MODEL_PATH=./models/kokoro
KOKORO_JAPANESE_MODEL=japanese
KOKORO_ENGLISH_MODEL=english
KOKORO_REPO_ID=hexgrad/Kokoro-82M

# 音声設定
DEFAULT_VOICE_JAPANESE=jf_alpha
DEFAULT_VOICE_ENGLISH=af_alpha
AUDIO_FORMAT=mp3  # mp3, wav, ogg
AUDIO_QUALITY=192  # ビットレート（kbps）

# 出力ディレクトリ設定
OUTPUT_DIR=output
AUDIO_DIR=output/audio

# キャッシュ設定
CACHE_TTL=3600  # キャッシュの有効期限（秒）
MAX_CACHE_SIZE=1000  # 最大キャッシュエントリ数

# パフォーマンス設定
MAX_WORKERS=4
CHUNK_SIZE=1024
MAX_AUDIO_LENGTH=300  # 最大音声長（秒）

# セキュリティ設定
API_KEY=your-api-key-here
CORS_ORIGINS=["http://localhost:3000"]

# エラーハンドリング
MAX_RETRIES=3
RETRY_DELAY=1  # リトライ間隔（秒）

# デバッグ設定
DEBUG=false
PROFILE=false

# 開発設定
DEV_MODE=false  # 開発モードの有効化
MOCK_TTS=false  # 音声合成をモックする（開発用）
