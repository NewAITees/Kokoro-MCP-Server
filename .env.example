# VoiceCraft-MCP-Server 環境設定ファイル
# 実際に使用する際は、このファイルを .env としてコピーし、適切な値を設定してください

# サーバー設定
MCP_SERVER_HOST=127.0.0.1
MCP_SERVER_PORT=8080
LOG_LEVEL=info  # debug, info, warning, error, critical

# Kokoro音声合成エンジン設定
KOKORO_MODEL_PATH=./models/kokoro
KOKORO_JAPANESE_MODEL=japanese
KOKORO_ENGLISH_MODEL=english

# 音声設定
DEFAULT_VOICE_JAPANESE=default
DEFAULT_VOICE_ENGLISH=default
AUDIO_FORMAT=mp3  # mp3, wav, ogg
AUDIO_QUALITY=192  # ビットレート（kbps）

# キャッシュ設定
ENABLE_CACHE=true
CACHE_DIR=./cache
MAX_CACHE_SIZE_MB=1000  # キャッシュの最大サイズ（MB）

# パフォーマンス設定
MAX_CONCURRENT_REQUESTS=10  # 同時に処理できるリクエストの最大数
REQUEST_TIMEOUT_SECONDS=30  # リクエストのタイムアウト（秒）

# セキュリティ設定（本番環境で使用する場合）
ENABLE_AUTH=false
API_KEY=your_api_key_here  # 実際の利用時は強力なキーに変更してください

# 開発設定
DEV_MODE=false  # 開発モードの有効化
MOCK_TTS=false  # 音声合成をモックする（開発用）
